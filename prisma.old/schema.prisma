
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"

}

enum Role {
  USER
  ADMIN
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  password String // For simplicity; in real apps, use hashed passwords
  role  Role    @default(USER)
  posts Post[]
  
}

model Post {
  id          Int      @id @default(autoincrement())   
  surname     String 
  name        String 
  rank        String  
  unit        String   
  mos         String  
  dateOfBirth DateTime  
  bloodType   String 
  status      String  
  equipment   String?  

  userId      Int // Foreign key to User
  user        User     @relation(fields: [userId], references: [id]) // Relation to User
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt @default(now())

}
